generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String   @id @default(cuid())
  userId      String?
  sourceUrl   String?
  description String?
  productData String?
  script      String?
  composition String?
  audioUrl    String?
  status      String   @default("DRAFT")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  recordings  ScreenRecording[]
  images      ProductImage[]
}

model ScreenRecording {
  id            String   @id @default(cuid())
  projectId     String
  videoUrl      String
  duration      Float
  cursorData    String   // JSON: [{x, y, timestamp, type: "move"|"click"|"input"}]
  trimStart     Float    @default(0)     // Trim in seconds
  trimEnd       Float    @default(0)     // 0 = no trim (use full duration)
  zoomPoints    String   // JSON: [{time, x, y, scale, duration}]
  featureName   String
  description   String
  cursorStyle   String   @default("mac") // mac, windows
  createdAt     DateTime @default(now())
  
  project       Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
}

model ProductImage {
  id          String   @id @default(cuid())
  projectId   String
  url         String
  name        String
  width       Int?
  height      Int?
  createdAt   DateTime @default(now())
  
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
}

model Subscription {
  id           String @id @default(cuid())
  userId       String @unique
  subscription String
  status       String
  dodoSubId    String
}
