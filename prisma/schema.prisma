generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String   @id @default(cuid())
  userId      String?
  sourceUrl   String?
  description String?
  productData String?
  script      String?
  composition String?
  audioUrl    String?
  status      String   @default("DRAFT")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
