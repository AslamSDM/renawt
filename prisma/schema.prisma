generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Project {
  id          String   @id @default(cuid())
  userId      String?
  name        String?
  sourceUrl   String?
  description String?
  productData String?
  script      String?
  composition String?
  audioUrl    String?
  status      String   @default("DRAFT")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  recordings  ScreenRecording[]
  images      ProductImage[]
}

model ScreenRecording {
  id                String   @id @default(cuid())
  projectId         String
  videoUrl          String
  duration          Float
  cursorData        String   // JSON: [{x, y, timestamp, type: "move"|"click"|"input"}]
  trimStart         Float    @default(0)     // Trim in seconds
  trimEnd           Float    @default(0)     // 0 = no trim (use full duration)
  zoomPoints        String   // JSON: [{time, x, y, scale, duration}]
  featureName       String
  description       String
  cursorStyle       String   @default("mac") // mac, windows
  processedVideoUrl String?  // URL of processed video (cursor replaced, zooms baked in)
  processingStatus  String   @default("pending") // pending | processing | complete | failed
  createdAt         DateTime @default(now())

  project           Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model ProductImage {
  id          String   @id @default(cuid())
  projectId   String
  url         String
  name        String
  width       Int?
  height      Int?
  createdAt   DateTime @default(now())
  
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)
  
  @@index([projectId])
}

model User {
  id            String    @id @default(cuid())
  email         String?   @unique
  name          String?
  image         String?
  emailVerified DateTime?
  creditBalance Int       @default(0)

  subscription    Subscription?
  creditPurchases CreditPurchase[]
  accounts        Account[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Subscription {
  id        String @id @default(cuid())
  userId    String @unique
  plan      String
  status    String
  dodoSubId String

  user User @relation(fields: [userId], references: [id])
}

model CreditPurchase {
  id             String   @id @default(cuid())
  userId         String
  amount         Int
  dodoPurchaseId String
  createdAt      DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model WebhookEvent {
  id String @id
}
